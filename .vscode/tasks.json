{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch TS",
      "type": "shell",
      "command": "tsc --watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Project.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Project.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Project.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}